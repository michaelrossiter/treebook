<div class="page-header">
  <h1>Status Wall</h1>
</div>

<div class="page-header">
	<%= link_to 'New Status', new_status_path, class: "btn btn-success btn-1g" %>
</div>

<% @statuses.each do |status| %>
<div class="status">
	<div class="row">
		<div class="col-md-1">
		<%= image_tag status.user.gravatar_url %>
		</div>
		<div class="col-md-7">
		    <strong><%= status.user.full_name %></strong>
		    <p><%= status.content %></p>
			<div class="meta">
			  <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
			  <span class="admin hover">
			   | <%= link_to "Edit", edit_status_path(status) %> |
				<%= link_to "Delete", status, method: :delete, data: {confirm: "Are your sure you want to delete this status?"} %>
			  </span>
			</div>

		</div>
	</div>
</div>
<%end%>	